<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.joseamaya.proyectoandroidlistview.carlos"
    tools:showIn="@layout/activity_carlos">

    <com.android.volley.toolbox.NetworkImageView
        android:layout_width="250dp"
        android:layout_height="300dp"
        android:id="@+id/imageViewCarlos"
        android:background="#e6dfdf" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textViewCarlosNombres"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imageViewCarlos"
        android:textColor="#1635ce"
        android:textSize="35dp"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textViewCarlosApellidos"
        android:layout_below="@+id/textViewCarlosNombres"
        android:layout_toEndOf="@+id/imageViewCarlos"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#1829e1"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textViewCarlosTelefono"
        android:textAlignment="textEnd"
        android:layout_below="@+id/textViewCarlosApellidos"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="70dp"
        android:textSize="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textViewCarlosCorreo"
        android:textAlignment="textEnd"
        android:layout_below="@+id/textViewCarlosTelefono"
        android:layout_alignEnd="@+id/textViewCarlosTelefono"
        android:textSize="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textViewCarlosFacebook"
        android:textAlignment="textEnd"
        android:layout_below="@+id/textViewCarlosCorreo"
        android:layout_alignEnd="@+id/textViewCarlosDesrcripcion"
        android:textSize="25dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textViewCarlosDesrcripcion"
        android:textAlignment="center"
        android:layout_below="@+id/imageViewCarlos"
        android:layout_centerHorizontal="true"
        android:textSize="25dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Llamar"
        android:id="@+id/buttonCarlosLlamar"
        android:onClick="onClickLlamarCarlos"
        android:textStyle="bold"
        android:theme="@android:style/Animation"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="56dp"
        android:textColor="#c91010"
        android:shadowColor="#ebd0d0"
        android:nestedScrollingEnabled="false"
        android:background="#e6a258"
        style="@android:style/Animation.Toast"
        android:textSize="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SMS"
        android:id="@+id/buttonCarlosSMS"
        android:layout_alignTop="@+id/buttonCarlosLlamar"
        android:layout_centerHorizontal="true"
        android:onClick="onClickSMSCarlos"
        android:background="#20d729"
        android:textSize="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FaceBook"
        android:id="@+id/buttonCarlosFaceBook"
        android:layout_alignBottom="@+id/buttonCarlosSMS"
        android:layout_alignParentEnd="true"
        android:onClick="onClickFaceBookCarlos"
        android:background="#388adc"
        android:textSize="20dp" />

</RelativeLayout>

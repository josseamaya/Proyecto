<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.joseamaya.proyectoandroidlistview.carlos"
    tools:showIn="@layout/activity_carlos">

    <com.android.volley.toolbox.NetworkImageView
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:id="@+id/imageViewCarlos"
        android:background="#e6dfdf" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textViewCarlosNombres"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imageViewCarlos"
        android:textColor="#1635ce"
        android:textStyle="bold"
        android:textSize="25dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textViewCarlosApellidos"
        android:layout_below="@+id/textViewCarlosNombres"
        android:layout_toEndOf="@+id/imageViewCarlos"
        android:textSize="20dp"
        android:textStyle="normal"
        android:textColor="#e11818" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textViewCarlosTelefono"
        android:layout_below="@+id/textViewCarlosApellidos"
        android:layout_toEndOf="@+id/imageViewCarlos" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textViewCarlosCorreo"
        android:layout_toEndOf="@+id/imageViewCarlos"
        android:layout_below="@+id/textViewCarlosTelefono" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textViewCarlosFacebook"
        android:layout_below="@+id/textViewCarlosCorreo"
        android:layout_toEndOf="@+id/imageViewCarlos" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textViewCarlosDesrcripcion"
        android:layout_alignBottom="@+id/imageViewCarlos"
        android:layout_toEndOf="@+id/imageViewCarlos" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Llamar"
        android:id="@+id/buttonCarlosLlamar"
        android:layout_below="@+id/imageViewCarlos"
        android:layout_alignParentStart="true"
        android:layout_marginTop="119dp"
        android:onClick="onClickLlamarCarlos" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WhatsApp"
        android:id="@+id/buttonCarlosWhatsAp"
        android:layout_alignTop="@+id/buttonCarlosLlamar"
        android:layout_centerHorizontal="true"
        android:onClick="onClickWhastAppCarlos" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FaceBook"
        android:id="@+id/buttonCarlosFaceBook"
        android:layout_alignBottom="@+id/buttonCarlosWhatsAp"
        android:layout_alignParentEnd="true"
        android:onClick="onClickFaceBookCarlos" />
</RelativeLayout>

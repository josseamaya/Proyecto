<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.carlo.proyectokiba.acerca"
    tools:showIn="@layout/activity_acerca"
    android:background="@mipmap/fondo05">

    <com.android.volley.toolbox.NetworkImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/imageView"
        android:background="#1da5d2"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/txtnombre" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Carlos Alfredo Banegas Mejia"
        android:id="@+id/txtnombre"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:textColor="#f6f2f2" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Colonia Tres Caminos"
        android:id="@+id/txtdireccion"
        android:layout_below="@+id/txtnombre"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:textColor="#f6f2f2" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="9687-1666"
        android:id="@+id/txttelefono"
        android:layout_below="@+id/txtdireccion"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:textColor="#f6f2f2" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="carlos.banegas@ujcv.edu.hn"
        android:id="@+id/textView2"
        android:layout_below="@+id/txttelefono"
        android:layout_alignParentStart="true"
        android:layout_marginTop="47dp"
        android:textAlignment="center"
        android:textColor="#f6f2f2" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="2014210009"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:textColor="#f6f2f2" />
</RelativeLayout>

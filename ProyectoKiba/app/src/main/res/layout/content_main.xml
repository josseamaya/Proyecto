<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.carlo.proyectokiba.MainActivity"
    tools:showIn="@layout/activity_main"
    android:background="@mipmap/fondo02">

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listViewKiba"
        android:layout_below="@+id/btnAcercaDe"
        android:layout_alignParentStart="true"
        android:layout_marginTop="47dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Acerca De..."
        android:id="@+id/btnAcercaDe"
        android:onClick="btnAcercaDe"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="#0b0b0b"
        android:textColor="#f5f1f1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Lenders team - Lista de Kiba"
        android:id="@+id/textView"
        android:textAlignment="center"
        android:layout_below="@+id/btnAcercaDe"
        android:layout_centerHorizontal="true"
        android:textColor="#f5f4f4" />

</RelativeLayout>
